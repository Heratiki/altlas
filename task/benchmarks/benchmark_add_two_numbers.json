                "variations": [
                    [
                        "a=5",
                        "b=3",
                        "print(a+b)"
                    ],
                    [
                        "num1=5",
                        "num2=3",
                        "print(num1+num2)"
                    ]
                ]
            },
            {
                "type": "sum_function",
                "pattern": [
                    "def sum(a,b):",
                    "    return a+b",
